# =============================================================================
# AgriProfit API Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment.
# See .env.development, .env.staging, .env.production for environment-specific templates.

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/agriprofit
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# CRITICAL: Generate a secure key for production: openssl rand -hex 32
# Key MUST be at least 32 characters long
JWT_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# OTP CONFIGURATION
# =============================================================================
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_COOLDOWN_SECONDS=60
OTP_MAX_ATTEMPTS=3

# Test OTP for development only - NEVER enable in production
# Set both to enable bypass OTP in development
TEST_OTP=
ENABLE_TEST_OTP=false

# =============================================================================
# SMS PROVIDER
# =============================================================================
# Leave empty in development - OTPs will be logged instead of sent
# Options: fast2sms, twilio
SMS_PROVIDER=

# Fast2SMS (India)
FAST2SMS_API_KEY=

# Twilio (International)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# CORS (Cross-Origin Resource Sharing)
# =============================================================================
# SECURITY WARNING: Never use CORS_ORIGINS=* with CORS_ALLOW_CREDENTIALS=true in production!
# Comma-separated list of allowed origins (no wildcard with credentials)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type

# =============================================================================
# RATE LIMITING
# =============================================================================
# Redis URL for distributed rate limiting (leave empty for in-memory storage)
REDIS_URL=

# Rate limit tiers (format: "count/period" - e.g., "5/minute", "100/hour")
RATE_LIMIT_CRITICAL=5/minute
RATE_LIMIT_WRITE=30/minute
RATE_LIMIT_READ=100/minute
RATE_LIMIT_ANALYTICS=50/minute

# =============================================================================
# LOGGING
# =============================================================================
LOG_DIR=logs
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
LOG_JSON_FORMAT=true

# =============================================================================
# SECURITY
# =============================================================================
# Comma-separated list of allowed hosts, or * for all
ALLOWED_HOSTS=*
HTTPS_REDIRECT=false

# =============================================================================
# API METADATA
# =============================================================================
API_TITLE=AgriProfit API
API_VERSION=1.0.0
API_CONTACT_EMAIL=support@agriprofit.in

# =============================================================================
# MONITORING
# =============================================================================
# Sentry DSN for error tracking (production)
SENTRY_DSN=
