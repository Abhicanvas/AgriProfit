# =============================================================================
# AgriProfit API - Production Environment Configuration
# =============================================================================
# IMPORTANT: This is a template file. Copy to .env and set real values.
# NEVER commit actual secrets to version control!
# =============================================================================

# Database connection (set via secrets manager or CI/CD)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Application secrets (generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_VALUE
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_VALUE

# Environment settings
ENVIRONMENT=production
DEBUG=false

# CORS - set your actual domain
ALLOWED_ORIGINS=https://yourdomain.com

# Redis for rate limiting and caching
REDIS_URL=redis://redis:6379/0
