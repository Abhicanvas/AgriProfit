# =============================================================================
# AgriProfit API - Development Environment Configuration
# =============================================================================
# This file contains development-specific settings.
# Copy to .env or set ENVIRONMENT=development to use these defaults.

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+psycopg://agriprofit:agriprofit@localhost:5432/agriprofit
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# WARNING: Change this in production!
JWT_SECRET_KEY=dev-secret-key-not-for-production-use-32chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# OTP CONFIGURATION
# =============================================================================
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=5
OTP_COOLDOWN_SECONDS=30
OTP_MAX_ATTEMPTS=10

# =============================================================================
# SMS PROVIDER
# =============================================================================
# Leave empty in development - OTPs will be logged instead of sent
SMS_PROVIDER=

# =============================================================================
# CORS
# =============================================================================
# Allow all origins in development
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# =============================================================================
# RATE LIMITING
# =============================================================================
# Use in-memory storage in development (no Redis required)
# Relaxed limits for development testing
REDIS_URL=
RATE_LIMIT_CRITICAL=1000/minute
RATE_LIMIT_WRITE=1000/minute
RATE_LIMIT_READ=1000/minute
RATE_LIMIT_ANALYTICS=1000/minute

# =============================================================================
# LOGGING
# =============================================================================
LOG_DIR=logs
LOG_LEVEL=DEBUG
LOG_RETENTION_DAYS=7
LOG_JSON_FORMAT=true

# =============================================================================
# SECURITY
# =============================================================================
ALLOWED_HOSTS=*
HTTPS_REDIRECT=false

# =============================================================================
# API METADATA
# =============================================================================
API_TITLE=AgriProfit API (Dev)
API_VERSION=1.0.0-dev
API_CONTACT_EMAIL=dev@agriprofit.in

# =============================================================================
# MONITORING
# =============================================================================
# No Sentry in development
SENTRY_DSN=
